<RunPage>:
    name: "inicio"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'Fondo1.jpg'
    FloatLayout:
        Label:
            text: "¡Bienvenido a SearchCap!"
            font_size: '30dp'
            color: 1,1,1,1
            pos_hint: {"right":0.75,"top": 0.45}
            size_hint_y: .05
            size_hint_x: 0.5
        Button:
            text: "Empezar"
            pos_hint: {"right":0.65,"top": 0.35}
            size_hint_y: .05
            size_hint_x: 0.3
            background_normal: ''
            background_color: (1,1,1,1)
            color: (0,0,0,1)
            on_release: root.cambio()
<MainPage>:
    name: "main"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'Fondo4.jpg'
    FloatLayout:
        Label:
            text: "[b]Por favor agregue el tipo de máquinas que posee su sistema [/b]"
            markup: True
            font_size: '20dp'
            color: 1,1,1,1
            pos_hint: {"right":0.75,"top": 0.9}
            size_hint_y: .05
            size_hint_x: 0.5
        Button:
            text: "Delta balanceada"
            pos_hint: {"right":0.65,"top": 0.7125}
            size_hint_y: .05
            size_hint_x: 0.3
            on_release: app.root.current = "deltabmenu"
        Button:
            text: "Estrella balanceada"
            pos_hint: {"right":0.65,"top": 0.525}
            size_hint_y: .05
            size_hint_x: 0.3
            on_release: app.root.current = "Ybmenu"
        Button:
            text: "Carga monofásica"
            pos_hint: {"right":0.65,"top": 0.3375}
            size_hint_y: .05
            size_hint_x: 0.3
            on_release: app.root.current = "Monomenu"
        Button:
            text: "Calcular"
            pos_hint: {"right":0.85,"top": 0.15}
            size_hint_y: .05
            size_hint_x: 0.3
            on_release: root.calculotot()
        Button:
            text: "Lista de cargas ingresadas"
            pos_hint: {"right":0.45,"top": 0.15}
            size_hint_y: .05
            size_hint_x: 0.3
            on_release: app.root.current = "Listatot"
<DeltabMenuPage>:
